#include <iostream>
#include <map>
#include <assert.h>

using namespace std;

void weight(int target);

int main() {
  for(int i=1; i<251; i++) {
    cout << i << endl;
    weight(i);
    cout << endl << endl;
  }
}

void weight(int target) {
  assert(target >= 1);
    
  map<int, bool> l;
  map<int, bool> r;

  int c = 1;

  while(c*3 <= target) {
    c *= 3;
  }

  while(target > 0) {
    int cur_count = target / c;
    if(cur_count == 2) {
      l[c*3] = true;
      if(l[c]) {
	l[c] = false;
      } else {
	r[c] = true;
      }
    } else if(cur_count == 1) {
      r[c] = true;
    }

    target %= c;
    c /= 3;
  }


  cout << "left pan: ";
  for(map<int, bool>::iterator it = l.begin(); it != l.end(); it++) {
    if(it->second == true)
      cout << it->first << " ";
  }
  cout << endl;

  cout << "right pan: ";
  for(map<int, bool>::iterator it = r.begin(); it != r.end(); it++) {
    if(it->second == true)
      cout << it->first << " ";
  }
  cout << endl;
}
